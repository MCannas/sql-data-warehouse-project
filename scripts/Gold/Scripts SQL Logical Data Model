  FROM silver.erp_px_cat_g1v2;

--Join the Tables.
SELECT DISTINCT
	   pn.prd_id
      ,pn.cat_id
      ,pn.prd_key
      ,pn.prd_nm
      ,pn.prd_cost
      ,pn.prd_line
      ,pn.prd_start_dt
